<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/genderHeader"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radioGroupID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4">

        <RadioButton
            android:id="@+id/radioButtonID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="Male"
            android:textColor="#0E0E0E"
            android:textSize="20sp"
            app:buttonTint="#EDEDED" />

        <RadioButton
            android:id="@+id/radioButton2ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:capitalize="words"
            android:checked="false"
            android:clickable="false"
            android:fontFamily="@font/abril_fatface"
            android:text="Female"
            android:textColor="#121212"
            android:textSize="20sp"
            app:buttonTint="#EFEFEF" />
    </RadioGroup>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abril_fatface"
            android:text="@string/Education"
            android:textAllCaps="false"
            android:textColor="#0E0E0E"
            android:textColorHighlight="#FFFFFF"
            android:textCursorDrawable="?android:attr/textCursorDrawable"
            android:textIsSelectable="true"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox1ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="SSC"
            android:textColor="#121212"
            android:textSize="20sp"
            app:buttonTint="#E3D1D1" />

        <CheckBox
            android:id="@+id/checkBox2ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="HSC"
            android:textColor="#121212"
            android:textSize="20sp"
            app:buttonTint="#DDD6D6" />

        <CheckBox
            android:id="@+id/checkBox3ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:text="BSc"
            android:textColor="#121212"
            android:textSize="20sp"
            app:buttonTint="#FDF8F8" />

        <Button
            android:id="@+id/buttonID2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textAllCaps="true"
            android:textColor="#FFFCFC"
            android:textColorHighlight="#00DDDDDD"
            android:textSize="20sp"
            app:backgroundTint="#040303" />

        <TextView
            android:id="@+id/gendertTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abril_fatface"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/educationTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abril_fatface"
            android:textColor="#121212"
            android:textSize="20sp" />

    <Button
        android:id="@+id/button3Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:backgroundTint="#040303"
        app:iconSize="20dp" />

    <Button
        android:id="@+id/exitButtonID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:backgroundTint="#000"
        android:gravity="bottom|center_horizontal"
        android:text="back"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:textColorHint="#FBFBFB"
        android:textSize="20sp" />


</LinearLayout>